{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "declarationDir": "./build/declarations",
    "sourceMap": true,
    "incremental": true
  },
  "exclude": ["tests", "node_modules"]
}
