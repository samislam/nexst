{
  "extends": "@repo/typescript-config/package.tsconfig.json",
  "compilerOptions": {
    "types": ["jest"],
    "rootDir": "./",
    "outDir": "./dist",
    "declarationDir": "./dist/dts",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"]
}
