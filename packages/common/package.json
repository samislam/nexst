{
  "name": "@repo/common",
  "private": true,
  "description": "",
  "version": "1.0.0",
  "types": "./dist/index.d.ts",
  "prettier": "@samislam/prettier-config",
  "scripts": {
    "dev": "pnpm barrel && concurrently -k --names \"BARRELS,TS\" --prefix-colors \"blue,green\" \"chokidar 'src/**/*.ts' -i 'src/index.ts' -i 'src/**/index.ts' -c 'pnpm barrel'\" \"tspc -p ./tsconfig.app.json --watch\"",
    "build": "pnpm barrel && tspc -p ./tsconfig.app.json",
    "test": "jest",
    "format": "prettier --write \"**/*.{ts,tsx,md,js}\"",
    "clean": "del \"**/{node_modules,dist,.turbo}\"",
    "barrel": "barrelsby --directory src --delete"
  },
  "author": "Islam Yamor",
  "license": "ISC",
  "devDependencies": {
    "@repo/typescript-config": "workspace:^",
    "@samislam/prettier-config": "^1.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "barrelsby": "^2.8.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-patch": "^3.2.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-transform-paths": "^3.5.2"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1"
  }
}
