{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "exclude": ["tests", "node_modules"]
}
