{
  "name": "nexst",
  "devDependencies": {
    "del-cli": "^6.0.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.27",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "start": "turbo start",
    "postinstall": "turbo postinstall",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && del \"./{node_modules,.turbo}\""
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
